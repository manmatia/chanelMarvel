<?xml version="1.0" encoding="utf-8" ?>

<component name="Detail1" extends="Group" initialFocus = "detalleDoctor" >

<interface>
    <field id="head" type="string" alias="over.title"/>
    <field id="titleLabel" type="string" alias="titleLabel.text"/>
    <field id="textLabel" type="string" alias="textLabel.text"/>
    <field id="posterUri" type="string" alias="posterUri.uri"/>
</interface>

    <script type="text/brightscript" uri="detail1.brs" />
    <children>

        <layoutGroup

            layoutDirection="vert">
            <Overhang
                id="over"
                showOptions="true"
                optionsAvailable="true"
                color="0xFF0000"/>
            <Rectangle
                id="informacionDoctor"
                height="1100"
                width="1920"
                translation = "[ 700, 460 ]"
                color="0xFFFFFF">
                <Label
                    id="titleLabel"
                    height="500"
                    width="600"
                    horizAlign="center"
                    vertAlign="center"
                    color="0xFF0000"
                    translation="[0,0]" />
                <Label

                    height="700"
                    width="800"
                    id="textLabel"
                    color="0xFF0000"
                    translation="[200,380]"
                    wrap="true"
                    displayPartialLines="true"/>
                <Poster
                    id="posterUri"
                    width="600"
                    height="600"
                    translation="[1070,180]"/>
            </Rectangle>
        </layoutGroup>
    </children>
</component>